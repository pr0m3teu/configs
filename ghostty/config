# Fonts
font-family = "Iosevka:size=15"

# Cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

fullscreen = true
# Key Bindings
keybind = ctrl+b>c=clear_screen
keybind = ctrl+b>t=new_tab
keybind = ctrl+b>n=next_tab
keybind = ctrl+b>p=previous_tab
keybind = ctrl+alt+h=goto_split:left
keybind =  ctrl+alt+l=goto_split:right
